@using Bober.Models.DatabaseModels;
@model Sotrudnik
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border border-info p-3 mt-4">
        <div class="pb-2">
            <h2 class="text-info">Удаление сотрудника</h2>
            <hr class="border-info"/>
        </div>
        <div class="mb-3">
            <label asp-for="Fio"></label>
            <input asp-for="Fio" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Pol"></label>
            <input asp-for="Pol" type="date" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="OtdelName"></label>
            <input asp-for="OtdelName" class="form-control" readonly />
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100">Удалить</button>
            </div>
            <div class="col">
                <a asp-controller="Sotrudnik" asp-action="Index" class="btn btn-secondary w-100">Вернуться к списку</a>
            </div>
        </div>
    </div>
</form>
