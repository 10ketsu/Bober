@using Bober.Models.DatabaseModels;
@model Sotrudnik
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="border border-info p-3 mt-4">
        <div class="pb-2">
            <h2 class="text-info">Изменить сотрудника</h2>
            <hr class="border-info" />
        </div>
        <div class="mb-3">
            <label asp-for="Fio"></label>
            <input asp-for="Fio" class="form-control" />
            <span asp-validation-for="Fio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pol"></label>
            <input asp-for="Pol" class="form-control" />
            <span asp-validation-for="Pol" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OtdelName"></label>
            <input asp-for="OtdelName" class="form-control" />
            <span asp-validation-for="OtdelName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-info w-100">Принять изменения</button>
            </div>
            <div class="col">
                <a asp-controller="Sotrudnik" asp-action="Index" class="btn btn-secondary w-100">Вернуться к списку</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
                <partial name="_ValidationScriptsPartial"></partial>
    }
}