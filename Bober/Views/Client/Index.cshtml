@using Bober.Models.DatabaseModels
@model IEnumerable<Client>

@{
    ViewData["Title"] = "Клиенты";
}

<h2 class="text-center text-info">Клиенты</h2>
<table class="table table-hover w-100 pt-3">
    <thead>
        <tr class="table-dark text-info">
            <th>ID</th>
            <th>Пасспорт</th>
            <th>Пол</th>
            <th>Телефон</th>
            <th>ДР</th>
            <th><a asp-controller="Client" asp-action="Add" class="btn btn-info w-100 h-75">Добавить</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td class="text-info">@client.Id</td>
                <td>@client.Passport</td>
                <td>@client.Sex</td>
                <td>@client.Phone</td>
                <td>@client.DateBorn.ToString("d MMMM yyyy")</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Client" asp-action="Edit" asp-route-id="@client.Id" class="btn btn-outline-warning mx-2">Изменить</a>
                        <a asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id" class="btn btn-outline-danger mx-2">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>