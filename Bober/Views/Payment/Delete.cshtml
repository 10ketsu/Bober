@using Bober.Models.DatabaseModels;
@model Payment
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border border-info p-3 mt-4">
        <div class="pb-2">
            <h2 class="text-info">Удаление платеж</h2>
            <hr class="border-info"/>
        </div>
        <div class="mb-3">
            <label asp-for="PaymentDate"></label>
            <input asp-for="PaymentDate" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="PaymentSumm"></label>
            <input asp-for="PaymentSumm" type="date" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="BillID"></label>
            <input asp-for="BillID" class="form-control" readonly />
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100">Удалить</button>
            </div>
            <div class="col">
                <a asp-controller="Payment" asp-action="Index" class="btn btn-secondary w-100">Вернуться к списку</a>
            </div>
        </div>
    </div>
</form>
