@using Bober.Models.DatabaseModels
@model IEnumerable<Bill>

@{
    ViewData["Title"] = "Счета";
}

<h2 class="text-center text-info">Счет</h2>
<table class="table table-hover w-100 pt-3">
    <thead>
        <tr class="table-dark text-info">
            <th>Id</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DatesSortParm"]" class="link link-primary page-link">Дата заключения</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DatefSortParm"]" class="link link-primary page-link">Дата закрытия</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["SummSortParm"]" class="link link-primary page-link">Сумма</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DogovorSortParm"]" class="link link-primary page-link">Номер Договора</a></th>
            <th><a asp-controller="Bill" asp-action="Add" class="btn btn-info w-100 h-75">Добавить</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td class="text-info">@bill.Id</td>
                <td>@bill.DateStart.ToString("d")</td>
                <td>@bill.DateFinish.ToString("d")</td>
                <td>@bill.Summ</td>
                <td>@bill.DogovorID</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Bill" asp-action="Edit" asp-route-id="@bill.Id" class="btn btn-outline-warning mx-2">Изменить</a>
                        <a asp-controller="Bill" asp-action="Delete" asp-route-id="@bill.Id" class="btn btn-outline-danger mx-2">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>