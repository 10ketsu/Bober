@using Bober.Models.DatabaseModels
@model IEnumerable<Building>

@{
    ViewData["Title"] = "Здания";
}

<h2 class="text-center text-info">Здания</h2>
<table class="table table-hover w-100 pt-3">
    <thead>
        <tr class="table-dark text-info">
            <th>ID</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="link link-primary page-link">Название</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["FlorSortParm"]" class="link link-primary page-link">Кол-во этажей</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" class="link link-primary page-link">Статус</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["BonusSortParm"]" class="link link-primary page-link">Дополнения</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["ZastrSortParm"]" class="link link-primary page-link">Застройщик</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["DistrictSortParm"]" class="link link-primary page-link">Район</a></th>
            <th><a asp-controller="Building" asp-action="Add" class="btn btn-info w-100 h-75">Добавить</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <td class="text-info">@building.Id</td>
                <td>@building.Name</td>
                <td>@building.FlorNumber</td>
                <td>@building.Status</td>
                <td>@building.Bonus</td>
                <td>@building.Zastr</td>
                <td>@building.District</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Building" asp-action="Edit" asp-route-id="@building.Id" class="btn btn-outline-warning mx-2">Изменить</a>
                        <a asp-controller="Building" asp-action="Delete" asp-route-id="@building.Id" class="btn btn-outline-danger mx-2">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>